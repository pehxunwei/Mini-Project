@model Mini_Project.Models.Account

@{
    ViewBag.Title = "EmailVerified";
}

@if (Session["Id"] != null)
{
    <div class="custom-checkphonenumber" style="margin-bottom: 417px; height: auto;">
        <div class="form-horizontal">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div h4 style="text-align: justify; font-size: 16px; color: #8e9297; margin-bottom: 30px;">@ViewBag.Message</div>

           
        </div>
    </div>

}
else
{
    <div class="custom-checkphonenumber" style="margin-bottom: 417px; height: auto;">
        <div class="form-horizontal">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div h4 style="text-align: justify; font-size: 16px; color: #8e9297; margin-bottom: 30px;">@ViewBag.Message</div>

            <div>
                @Html.ActionLink("Back to Login", "LogIn", "Account")
            </div>
        </div>
    </div>
}

