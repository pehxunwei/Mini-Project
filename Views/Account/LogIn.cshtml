@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
<script>
    function myFunction() {
        var x = document.getElementById("Password");
        var icon = document.querySelector(".fa")
        if (x.type === "password") {
            x.type = "text";
            icon.style.color = "#74ebd5";
        } else {
            x.type = "password";
            icon.style.color = "#9face6";
        }
    }
</script>
}
