@model Mini_Project.Models.Account

@{
    ViewBag.Title = "RecoverUserName";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="custom-checkphonenumber" style="margin-bottom: 274px;">
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


            <div h4 style="text-align: justify; font-size: 16px; color: #8e9297; margin-bottom: 30px;">
                Your user name has been recovered successfully! It will be sent to your mobile phone.
            </div>

        </div>
        <div>
            @Html.ActionLink("Click here to return to the main page", "LogIn", "Account")
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
