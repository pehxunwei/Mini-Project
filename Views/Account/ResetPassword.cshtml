@model Mini_Project.Models.Account

@{
    ViewBag.Title = "ResetPassword";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="custom-checkphonenumber">
        <div class="form-horizontal">

            <h2 class="form-title" style="color: #ffffff; font-weight: 300; margin-bottom: 28px;">Forgotten Password?</h2>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <h4 style="text-align: justify; font-size: 14px; color: #8e9297; margin-bottom: 30px;">If you have forgotten your password, simply enter your email address below and we will send you a One-Time-Password to your email address for verification. Once verified, you may reset your password. </h4>


            <div class="form-group" style="padding-left:15px;">
                <span class="control-label custom-reg">Email Address</span>
                <div class="row-md-10">
                    @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control custom-form-control" } })
                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                </div>
            </div>



            <div class="form-group" style="text-align: center; padding-top: 20px;">
                <input type="submit" name="submit" id="submit" class="form-submit" value="Send Verification" />
            </div>

            <div>
                @Html.ActionLink("Forgot your username?", "CheckPhoneNumber", "Account")
            </div>


            <div>
                @Html.ActionLink("Back to Login", "LogIn", "Account")
            </div>
        </div>
    </div>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
