@model Mini_Project.Models.Account

@{
    ViewBag.Title = "Verify Password OTP";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="custom-checkphonenumber" style="margin-bottom: 230px;">
        <div class="form-horizontal">

            


            <div h4 style="text-align: center; font-size: 16px; color: #8e9297; margin-bottom: 30px;">
                Type in the given OTP to your email address.
            </div>


            <div class="form-group" style="padding-left:15px;">
                <span class="control-label custom-reg">One Time Password</span>
                <div class="row-md-10">
                    @Html.EditorFor(model => model.otpValuePasswordReset, new { htmlAttributes = new { @class = "form-control custom-form-control" } })
                    @Html.ValidationMessageFor(model => model.otpValuePasswordReset, "", new { @class = "text-danger" })
                    @Html.ValidationSummary(true, "", new { @class = "text-danger", @style = "margin-left: -20px; margin-bottom: -18px" })
                </div>
            </div>

            <div>
                @Html.ActionLink("Click here to resend OTP", "RequestEmailPassword", "Account", routeValues: null, htmlAttributes: new { @class = "custom-OTP" })
            </div>

            <div class="form-group" style="text-align: center; padding-top: 30px;">
                <input type="submit" name="submit" id="submit" class="form-submit" value="Submit" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
